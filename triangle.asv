%This script is used to produce a triangle and find its area
%to demonstrate the idea of an integral

%x = linspace(0,10,100);
%generate accurate x array bx linspace is garbage
N = 20;
x = zeros(1,N);
xmax = 10;
increment = xmax/N;
for i = 1:N
    x(i+1) = x(i) + increment;
end

f = @(x) x.^2;
y = -x+10;

plot(x,y,'k');
hold on
%area(x,y)
y1=[0 10];
rectangles(y,x);
hold off
integral(f,0,10);